<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/PortalFragment">

    <fragment
        android:id="@+id/PortalFragment"
        android:name="com.example.madlevel3task2.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_portal">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/AddPortalFragment" />
    </fragment>
    <fragment
        android:id="@+id/AddPortalFragment"
        android:name="com.example.madlevel3task2.AddPortalFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_add_portal">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/PortalFragment" />
    </fragment>
</navigation>